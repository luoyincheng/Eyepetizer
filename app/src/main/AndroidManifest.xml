<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.yincheng.closer">

    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
            android:name="com.yincheng.closer.app.CloserApplication"
            android:allowBackup="true"
            android:icon="@drawable/ic_upstairs"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_upstairs"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
                android:name="com.yincheng.closer.views.activities.SplashActivity"
                android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="com.yincheng.closer.views.activities.LauncherActivity"
                android:launchMode="singleTask" />
        <activity
                android:name="com.yincheng.closer.views.activities.SignInActivity"
                android:theme="@style/Login" />
        <activity android:name="com.yincheng.closer.views.activities.SettingsActivity" />
    </application>

</manifest>